[Unit]
Description=Synk Simulation Loop
After=network.target redis-server.service

[Service]
Type=simple
WorkingDirectory=/synk
ExecStart=/synk/gopath/bin/eternal-action
# Because no ExecStop target is not provided this will be killed immediately on
# 'stop' or 'restart'.
Restart=on-failure
RestartSec=10
User=charles
Environment=SYNK_ENV=production

[Install]
WantedBy=multi-user.target
